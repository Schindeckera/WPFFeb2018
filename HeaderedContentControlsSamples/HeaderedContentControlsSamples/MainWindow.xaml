<Window x:Class="HeaderedContentControlsSamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeaderedContentControlsSamples"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Expander>
            <Expander.Header>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="More information" />
                    <Button>Some button in the header</Button>
                </StackPanel>
            </Expander.Header>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="this is the content" />
                <Button>Content</Button>
            </StackPanel>
        </Expander>
    </Grid>
</Window>
